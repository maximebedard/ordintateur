<%= form_for(@video, html: { multipart: true }) do |f| %>
  <%= errors_summary(@video) %>

  <div class="form-group">
    <%= f.label :titre %>
    <%= f.text_field :titre, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tags %>
    <%= f.text_field :tags, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tags %>
    <%= f.file_field :video_url, class: "form-control-file" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
