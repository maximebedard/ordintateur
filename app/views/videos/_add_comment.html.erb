<%= form_for(comment) do |f| %>
  <%= errors_summary(comment) %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :second_from_start %>
    <%= f.text_field :second_from_start %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
